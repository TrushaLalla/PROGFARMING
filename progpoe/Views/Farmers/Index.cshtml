@model IEnumerable<progpoe.Models.Farmer>

@{
    ViewData["Title"] = "Farmer";
}

<h1>Farmer List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add Farmers Button</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FarmerEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FarmerPassword)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.FarmerEmail)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.FarmerPassword)
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                    <a asp-action="ViewProducts" asp-route-id="@item.Id">View Products</a>
            </td>
        </tr>
}
    </tbody>
</table>
